<div class="row">
  <div class="col-lg-6 col-lg-offset-3">
    <div class="panel panel-primary">
      <div class="panel-body">
        <h3>Edit Profile</h3>
        <%= simple_form_for(@user, remote: true, input_html: {class: "form", multipart: true}) do |f| %>
          <div class="form-group">
            <%= f.label :avatar %>
            <%= render 'shared/avatar', user: @user %>
            <br>
            <%= f.file_field :avatar %>
            <%= f.hidden_field :avatar_cache %>
            <br>
            <%= f.label :cover %>
            <%#= render 'shared/cover', user: @user %>
            <%= image_tag @user.cover_url || 'cover.png', class: 'img-thumbnail img-responsive' %>
            <br>
            <%= f.file_field :cover %>
            <%= f.hidden_field :cover_cache %>
          </div>

          <div class="form-group">
            <%= f.input :name, label: 'User Name',placeholder: 'User Name',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :email, placeholder: 'Email',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :first_name, placeholder: 'First Name',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :last_name, placeholder: 'Last Name',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.text_area :bio, placeholder: 'Bio',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :location, placeholder: 'Location',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :phone_number, as: :tel, placeholder: 'Phone Number',
             class: 'form-control', autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.label "Birth Date" %>
            <%= f.text_field :dob, placeholder: 'Date of Birth',
             class: 'form-control', as: :datetime, autofocus: true %>
          </div>

          <div class="form-group">
            <%= f.input :sex, collection: options_for_seasons,
             class: 'form-control', prompt: 'Select One', autofocus: true %>
          </div>

          <div class="form-actions">
            <%#= submit_tag 'Update', class: 'btn btn-primary' %>
            <%= button_tag(type: :submit, class: 'btn btn-primary') do %>
              Update
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
