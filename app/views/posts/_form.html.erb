<%= simple_form_for @post, html: {class: "form", multipart: true} do |f| %>
  <div class='form-group'>
    <%= f.input :content, autofocus: true, placeholder: "What's up?",
     label: false, class: 'form-control contenteditable editable input-mentionable',
     html_input: { id: "post-content", class: "" } %>
  </div>

  <div id="img-preview" class="form-group hidden">
    <%= image_tag '' %>
  </div>

 <div class="form-group hidden">
    <%= f.file_field :attachment %>
  </div>

  <div class="form-group">
    <a id="post-attachment" href="javascript:void(0);" class="pull-right btn btn-primary">
      <i class="icon-attach-1"></i>
    </a>
    <%= button_tag(type: :submit, class: 'btn btn-primary') do %>
      <i class="icon-paper-plane"></i> Post
    <% end %>
  </div>
<% end %>
